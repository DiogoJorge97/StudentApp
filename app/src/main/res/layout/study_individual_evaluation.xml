<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/e_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="8dp"
        android:text="Teste 1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/hours_tv"
        app:layout_constraintEnd_toStartOf="@+id/study_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hours_tv" />

    <TextView
        android:id="@+id/uc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="UC"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/e_name_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hours_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="3h"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/study_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Estudar"
        app:layout_constraintBaseline_toBaselineOf="@+id/e_name_tv"
        app:layout_constraintEnd_toStartOf="@+id/hours_tv" />
</android.support.constraint.ConstraintLayout>